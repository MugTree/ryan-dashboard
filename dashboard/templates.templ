package dashboard

import "net/http"

// "github.com/starfederation/datastar-go/datastar"
templ Layout(title string, r *http.Request, isProd bool) {
	<!DOCTYPE html>
	<html>
		<head>
			{{ setAssetPaths(isProd) }}
			<title>{ title }</title>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<script type="module" src={ dataStarPath }></script>
			<link href={ bulmaCSSPath } rel="stylesheet"/>
			<link href={ appCSSPath } rel="stylesheet"/>
			<script src="https://cdn.jsdelivr.net/npm/echarts@5/dist/echarts.min.js"></script>
		</head>
		<body>
			@MainMenu(r)
			{ children... }
			@Footer()
		</body>
	</html>
}

templ MainMenu(r *http.Request) {
	<nav class="navbar is-success" data-signals="{burgerMenu: false}">
		<div class="container">
			<div class="navbar-brand">
				//{ getUser(r.Context()).UserName }
				<a aria-label="Go to our homepage" href="/">
					<img
						src="/img/logo2.png"
						class="site-logo mt-4 mb-3 mr-6"
						alt="Site log"
						width="296"
						height="114"
					/>
				</a>
				<a
					role="button"
					data-on:click="$burgerMenu = !$burgerMenu"
					class="navbar-burger burger"
					data-class:is-active="$burgerMenu"
					aria-label="Toggle the mobile navigation"
				>
					<span aria-hidden="true"></span>
					<span aria-hidden="true"></span>
					<span aria-hidden="true"></span>
					<span aria-hidden="true"></span>
				</a>
			</div>
			<div class="navbar-menu" data-class:is-active="$burgerMenu" id="mainnav">
				<div class="navbar-start">
					<a class="navbar-item" href="/about-us">About</a>
					<a class="navbar-item" href="/contact-us">Contact</a>
				</div>
			</div>
		</div>
	</nav>
}

templ Footer() {
	<footer class="footer has-background-dark has-text-white">
		<div class="container has-text-centered-mobile">
			<span class="copyright has-text-white ">Â©2025 - Some site</span>
		</div>
	</footer>
}

templ HomePage(r *http.Request, isProd bool, comp templ.Component) {
	@Layout("Homepage", r, isProd) {
		<main>
			@comp
		</main>
	}
}

templ DummyComp() {
	<div>hey</div>
}

templ SystemMemory(chartHtml string, chartScript string, htmlSelector string, apiUrl string) {
	@templ.Raw(chartHtml)
	@templ.Raw(chartScript)
	<script type="module">
  const chartEl = document.querySelector({{ htmlSelector }});
  const chart = echarts.getInstanceByDom(chartEl);

  async function updateChart() {
    try {
      const res = await fetch({{ apiUrl }});
      const option = await res.json();

      // Update chart with full option object
      chart.setOption(option, true);
    } catch (err) {
      console.error("Chart update failed:", err);
    }
  }

  setInterval(updateChart, 100);
</script>
}
